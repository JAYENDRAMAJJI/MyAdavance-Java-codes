<web-app>
    <servlet>
        <servlet-name>ErrorDemoServlet</servlet-name>
        <servlet-class>com.example.ErrorDemoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ErrorDemoServlet</servlet-name>
        <url-pattern>/errorDemo</url-pattern>
    </servlet-mapping>

    <!-- Custom Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error404.html</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/error500.html</location>
    </error-page>

    <error-page>
        <error-code>400</error-code>
        <location>/generalError.html</location>
    </error-page>
</web-app>
